
<section id="content-area">
  <div class="span12">
  <h2>Change your password</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, :as => :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="inputs">
      <%= f.input :password, :label => "New password", :required => true, :input_html=> { :class=>"field-name span3", :placeholder=>"Enter Password"} %>
      <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, :input_html=> { :class=>"field-name span3", :placeholder=>"Enter Password Confirmation"}%>
    </div>

    <div class="actions">
      <%= f.button :submit, "Change my password", :class=>"red-button" %>
    </div>
  <% end %>

  <%= render :partial => "devise/shared/links", :class=>"hi" %>
  </div>
</section>
