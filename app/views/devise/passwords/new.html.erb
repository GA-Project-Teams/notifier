<section id="content-area" class="box">
	<h2>Forgot your password?</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  <%= f.error_notification %>

	  <div class="inputs">
	  	<p>Please enter the email associated with your account.</p>
	    <%= f.input :email, :required => false, :input_html=> { :class=>"field-name", :placeholder=>"Email"} , :label=> false %>
	  </div>

	  <div class="actions">
	    <%= f.button :submit, "RESET PASSWORD", :class=>"red-button" %>
	  </div>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</section>
