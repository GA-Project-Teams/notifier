<%= simple_form_for(@message) do |f| %>
  <div class="inputs">
    
    <% if controller.action_name == 'notify' %>
  	<div class="input integer required">
  		<label class="string required" for="message_to_user_name"><abbr title="required"></abbr>Who would you like to notify?</label>
  		<input class="string required typeahead" data-provide="typeahead" id="message_to_user_name" value= <%= "#{to_user.first_name} #{to_user.last_name}" %> />
  	</div> 
      <%= f.input :to_user_id, :required => true, :input_html => { :value => @user.id } %>
      <%= f.input :content, :required => true %>
      <%= f.input :from_user_id, :required => true, :as => :hidden, :input_html => { :value => current_user.id } %>
      <%= f.input :message_type_id, :required => true, :autofocus => false, :as => :radio_buttons, :collection => [['SMS', 1],['Email', 2],['Both', 3]], :checked => @user.preference %>
    <% else %>
    
      <div class="input integer required">
    		<label class="string required" for="message_to_user_name"><abbr title="required"></abbr>Who would you like to notify?</label>
    		<input class="string required typeahead" data-provide="typeahead" id="message_to_user_name" />
    	</div>
  	
      <%= f.input :to_user_id, :required => true %>
      <%= f.input :content, :required => true %>
      <%= f.input :from_user_id, :required => true, :as => :hidden, :input_html => { :value => current_user.id } %>
      <%= f.input :message_type_id, :required => true, :autofocus => false, :as => :radio_buttons, :collection => [['SMS', 1],['Email', 2],['Both', 3]], :checked => 1 %>
    
    <% end %>
  </div>
  <div class="actions">
    <%= f.button :submit, "SEND NOTIFICATION" %>
  </div>
<% end %>