<section class="span12">
	<h2>SUCCESS!</h2>
	<% if flash[:notice] %>
	  <p class="notice"><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:error] %>
	  <p class="error"><%= flash[:error] %></p>
	<% end %>

	<div class="row">
		<div class="span6">
			<p>The information for the following user has been added/updated!</p>
			<div id="user_information">
				<p>Name: <%= @user.first_name %> <%= @user.last_name %><br /> 
				Company Name: <%= @user.company_name %><br />
				Phone: <%= @user.phone_number %><br />
				Email Address: <%= @user.email %><br /> 
				Last Update: <%= @user.updated_at.strftime("%B %e %Y at %l:%M%p") %>
				</p>
			</div>
		</div>
	</div>

	<div id="buttons" class="row">
		<div id="button1" class="span3">
			<%= link_to "VIEW CONTACTS", users_path, :class => "red-button" %>
		</div>	
		<div id="button2" class="span3">
			<%= link_to "SEND NOTIFICATION", notify_message_path(@user), :class => "red-button" %>
		</div>
	</div>
</section>